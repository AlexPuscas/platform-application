{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with 'OroFormBundle:Form:fields.html.twig' %}

{% if form.vars.value and form.vars.value.id %}
    {% set formAction = path('bugtracking_issue_update', { 'id': form.vars.value.id }) %}
{% elseif form.vars.value.parent is not null %}
    {% set formAction = path('bugtracking_issue_create', { 'id': form.vars.value.parent.id}) %}
{% else %}
    {% set formAction = path('bugtracking_issue_create') %}
{% endif %}

{% block navButtons %}
    {% if form.vars.value.id %}
        {{ UI.deleteButton({
            'dataUrl': path('bugtracking_issue_api_delete_issue', {'id': form.vars.value.id}),
            'dataRedirect': path('bugtracking_issue_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-tag',
            'dataId': form.vars.value.id,
            'entity_label': 'bugtracking.issue.entity.singular_label'|trans
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}

    {{ UI.cancelButton(path('bugtracking_issue_index')) }}
    {% set html = UI.saveAndCloseButton() %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {{ UI.dropdownSaveButton({ 'html': html }) }}
{% endblock navButtons %}

{% block breadcrumb %}
    {% if breadcrumbs is not defined %}
        {% set breadcrumbs = [{'label': 'bugtracking.issue.entity.singular_label'|trans }] %}
        {% if entity.code is not empty %}
            {% set breadcrumbs = breadcrumbs|merge([{'label': entity.code}]) %}
        {% endif %}
    {% endif %}
    {% include 'OroNavigationBundle:Menu:breadcrumbs.html.twig' %}
{% endblock breadcrumb %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
        'entity':      form.vars.value,
        'indexPath':   path('bugtracking_issue_index'),
        'indexLabel': 'bugtracking.issue.entity.plural_label'|trans,
        'entityTitle': form.vars.value.summary
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'bugtracking.issue.entity.plural_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'bugtracking_issue_update' %}
    {% set formData = form_row(form) %}

    {% set dataBlocks = [{
        'title': 'General'|trans,
        'class': 'active',
        'subblocks': [{
            'title': '',
            'data': [formData]
        }]
    }]
    %}
    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}

{% block content %}
    {% if isWidgetContext %}
        <script type="text/javascript">
            require(['oroui/js/widget-manager', 'oroui/js/messenger'],
                    function(widgetManager, messenger) {
                        widgetManager.getWidgetInstance(
                            {{ app.request.get('_wid')|json_encode|raw }},
                            function(widget) {
                                widget.on('formSave', function() {
                                    if (widget.disposing) {
                                        return false;
                                    }
                                    var message = '{{ 'bugtracking.issue.controller.issue_saved_message'|trans }}';
                                    messenger.notificationFlashMessage('success', message);
                                    widget.remove();
                                });
                            }
                        );
                    });
        </script>
    {% endif %}
    {{ parent() }}
{% endblock content %}
